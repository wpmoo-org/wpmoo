{
  "name": "wpmoo/wpmoo",
  "description": "WPMoo â€” WordPress Micro Object-Oriented Framework (PHP 7.4+)",
  "license": "GPL-3.0-or-later",
  "homepage": "https://wpmoo.org",
  "authors": [
    {
      "name": "WPMoo",
      "email": "hello@wpmoo.org",
      "homepage": "https://wpmoo.org/"
    }
  ],
  "keywords": [
    "wordpress",
    "wp-cli",
    "framework",
    "micro-framework",
    "php",
    "php7.4",
    "php8.0",
    "php8.1",
    "php8.2",
    "php8.3",
    "oop",
    "object-oriented"
  ],
  "support": {
    "issues": "https://github.com/wpmoo/wpmoo/issues",
    "source": "https://github.com/wpmoo/wpmoo/"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.1.x-dev"
    }
  },
  "type": "wordpress-framework",
  "require": {
    "php": ">=7.4",
    "wpmoo/wpmoo-ui": "dev-dev"
  },
  "autoload": {
    "psr-4": {
      "WPMoo\\": "src/"
    },
    "files": [
      "wpmoo.php"
    ]
  },
  "require-dev": {
    "wpmoo/wpmoo-coding-standards": "dev-main",
    "wpmoo/wpmoo-cli": "dev-dev",
    "phpstan/phpstan": "^1.11",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "phpunit/phpunit": "^9.6 || ^10.5"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "moo": "php bin/moo",
    "check:plugin": "php vendor/bin/moo wp-check",
    "check:plugin:relaxed": "php vendor/bin/moo wp-check --no-strict",
    "check:validate": "composer validate",
    "lint:php": "find . -path './vendor' -prune -o -name '*.php' -print0 | xargs -0 -n1 php -l",
    "phpcs": "vendor/bin/phpcs -n --standard=phpcs.xml",
    "phpcbf": "vendor/bin/phpcbf",
    "phpstan": "vendor/bin/phpstan analyse --no-progress --memory-limit=1G",
    "hooks:install": "git config core.hooksPath .githooks && chmod +x .githooks/pre-commit .githooks/pre-push",
    "check": [
      "@check:validate",
      "@lint:php",
      "@phpcbf",
      "@phpcs",
      "@phpstan"
    ]
  }
}
