includes:
    - vendor/szepeviktor/phpstan-wordpress/extension.neon
    - resources/phpstan/phpstan-baseline.neon

parameters:
    level: 6
    phpVersion: 70400
    bootstrapFiles:
        - phpstan-bootstrap.php
    paths:
        - src
    excludePaths:
        - vendor
        - tests
        - src/CLI
    stubFiles:
        - resources/phpstan/stubs/wpmoo-fields-field.stub.php
    reportUnmatchedIgnoredErrors: false
    treatPhpDocTypesAsCertain: false
